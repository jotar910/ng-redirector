{
  "name": "ng-redirector",
  "description": "A redirector extension based on Angular proxy files. Redirects requests based on user-defined configurations.",
  "version": "1.0.4",
  "manifest_version": 3,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "ng-redirector",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>",
    "*://*/*"
  ],
  "permissions": [
    "storage",
    "management",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "activeTab",
    "cookies",
    "scripting"
  ]
}
